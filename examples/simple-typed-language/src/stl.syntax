
identifier:
    identifier = [A-Za-z_][A-Za-z0-9-_]*; {no-layout}

int:
    int = [0-9]+; {no-layout}

expression:
    add = expression "+" expression;
    sub = expression "-" expression;

    int = int;
    identifier = identifier;


statement:
    if = "if" expression "{" statement* "}";
    expression = expression ";";
    assignment = identifier "=" expression ";";

program:
    program = statement*;

start at program;
layout = [\n\r\t ];

